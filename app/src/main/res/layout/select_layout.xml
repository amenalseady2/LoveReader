<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/select_layout"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <!--顶部工具栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:id="@+id/top_tool_1"
        android:background="#52e494">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/base_action_bar_back_normal"
            android:id="@+id/return_select"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="爱*阅读"
            android:layout_toRightOf="@id/return_select"
            android:layout_centerVertical="true"
            android:id="@+id/title_text_1"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:id="@+id/title_dis_1"
            android:layout_toRightOf="@id/title_text_1"
            android:background="#aaaaaa"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:src="@drawable/select"
            android:id="@+id/title_select_1"
            android:layout_toRightOf="@id/title_dis_1"
            android:hint="搜索"/>

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/select_list"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>
