<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_content_layout"
    tools:context="com.example.lenovo.lovereader.MainActivity">

    <!--顶部工具栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:id="@+id/top_tool"
        android:background="#52e494">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="爱*阅读"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/title_text12"/>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:id="@+id/title_dis"
            android:layout_toRightOf="@id/title_text12"
            android:background="#aaaaaa"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:src="@drawable/select"
            android:id="@+id/title_select"
            android:layout_toRightOf="@id/title_dis"/>

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_content"
        android:layout_below="@id/top_tool"></ListView>

</RelativeLayout>
